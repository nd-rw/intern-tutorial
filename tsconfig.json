{
  "compilerOptions": {
    "types": [
      "intern",
      "systemjs"
    ],
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.symbol.wellknown"
    ],
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "_dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}